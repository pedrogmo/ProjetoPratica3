<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Media"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/etMedia"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="40dp"
                    android:hint="Media"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textColorHighlight="#FFE135"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Irradiação"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/etIrradiacao"
                    android:layout_width="192dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:hint="Irradiação"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textColorHighlight="#FFE135"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Watts"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/etWatts"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="40dp"
                    android:hint="Watts"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textColorHighlight="#FFE135"
                    android:textSize="20dp" />
            </LinearLayout>

            <Button
                android:id="@+id/btnCalcular"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="20dp"
                android:text="Calcular" />

            <TextView
                android:id="@+id/tvNumeroPlacas"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:text="Número Placas:"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvInversor"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:text="Inversor:"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvInversorMais"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:text="Inversor Mais:"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvInversorMenos"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:text="Inveror Menos:"
                android:textSize="20dp" />

        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />
</androidx.constraintlayout.widget.ConstraintLayout>