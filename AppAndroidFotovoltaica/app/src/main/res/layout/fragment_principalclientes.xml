<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/fragment_principalclientes"
    android:background="@android:color/white">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        >
        <ListView
            android:id="@+id/lvListaClientes"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="30dp"
            android:visibility="visible"
            android:layout_below="@+id/etBuscarCliente"/>
        <EditText
            android:id="@+id/etBuscarCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:hint="Digite o nome do cliente a ser buscado"/>



        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabNovoCliente"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="end|bottom"
            android:layout_marginRight="30dp"
            android:layout_marginTop="400dp"
            android:visibility="visible"
            android:src="@drawable/ic_cliente"/>

    </RelativeLayout>

</FrameLayout>