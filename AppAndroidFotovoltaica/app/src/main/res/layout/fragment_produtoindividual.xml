<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_produtoindividual">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/llProdutoIndividual"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".ui.mainactivity.clientes.clienteIndividual.ProdutoIndividualFragment"
            android:layout_margin="20dp">

            <TextView
                android:id="@+id/tvNomeProdutoAlt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome: "
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/tvDescricaoProdutoAlt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descricao: "
                android:layout_marginBottom="10dp"
                android:scrollHorizontally="false"
                android:scrollbars="vertical" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Preco (R$): " />

            <EditText
                android:id="@+id/etPrecoProdutoAlt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvExceptionPrecoProdutoAlt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#c0392b"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:id="@+id/camposExtraProdutoAlt"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:background="@android:drawable/bottom_bar"
                android:paddingLeft="4.0dip"
                android:paddingTop="5.0dip"
                android:paddingRight="4.0dip"
                android:paddingBottom="1.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp">

                <Button
                    android:id="@+id/btnAlterarProduto"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:text="Alterar"
                    android:layout_weight="1.0" />

                <Button
                    android:id="@+id/btnExcluirProduto"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:text="Excluir"
                    android:layout_weight="1.0" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>